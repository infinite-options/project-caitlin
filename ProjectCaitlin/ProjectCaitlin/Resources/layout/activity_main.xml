<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#FCF3CF"
    > 
    <Button 
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="480dp"
        android:text="Call MOM"
        android:background = "#F0BD80 "
        android:textSize="20dp"
        android:id="@+id/callMom"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="480dp"
        android:text="Call DAD"
        android:background = "#F0BD80 "
        android:textSize="20dp"
        android:id="@+id/callDad"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="480dp"
        android:text="Call BRO"
        android:background = "#F0BD80 "
        android:textSize="20dp"
        android:id="@+id/callBro"/>

    <Button
        android:layout_width="290.0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="Bedroom"
        android:textSize="50dp"
        android:id="@+id/bedroom"/>
    <Button
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="90dp"
        android:text="Restroom"
        android:textSize="50dp"
        android:id="@+id/restroom"/>
    <Button
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="170dp"
        android:text="Kitchen"
        android:textSize="50dp"
        android:id="@+id/kitchen"/>
    <Button
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="250dp"
        android:text="LivingRoom"
        android:textSize="40dp"
        android:id="@+id/LivingRoom"/>
    <Button
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="350dp"
        android:text="Long Term Goals"
        android:textSize="30dp"
        android:id="@+id/LongTerm"/>

</RelativeLayout>