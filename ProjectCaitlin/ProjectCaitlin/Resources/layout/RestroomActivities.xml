<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#FCF3CF">

    <TextView
        android:text= "0:00:000"
        android:textSize="45dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id ="@+id/timer"/>

     <Button
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Brush Teeth"
        android:textSize="20dp"
        android:id="@+id/brush"/>
    <Button
        android:layout_width="100.0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="50dp"
        android:text="Done"
        android:textSize="20dp"
        android:id="@+id/stop"/>
    <Button
        android:layout_width="260.0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:text="Activity2"
        android:textSize="20dp"
        android:id="@+id/activity2"/>
    <Button
        android:layout_width="260.0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:text="Activity3"
        android:textSize="20dp"
        android:id="@+id/activity3"/>
    <Button
        android:layout_width="260.0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:text="Activity3"
        android:textSize="20dp"
        android:id="@+id/activity3"/>
     <Button
        android:layout_width="260.0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:text="Activity4"
        android:textSize="20dp"
        android:id="@+id/activity4"/>
</RelativeLayout>